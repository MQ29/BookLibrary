@model Dictionary<int, Book>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>List of books</h1>
<a class="btn btn-primary" asp-controller="Book" asp-action="Create">Add a book</a>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Value.Title
            </td>
            <td>
                @item.Value.Author
            </td>
            <td>
                <a class="btn btn-outline-secondary" asp-controller="Book" asp-action="Update" asp-route-id=@item.Value.Id>Edit</a>
                <a class="btn btn-outline-info" asp-controller="Book" asp-action="Details" asp-route-id=@item.Value.Id>Details</a>
                <a class="btn btn-outline-danger" asp-controller="Book" asp-action="Delete" asp-route-id=@item.Value.Id>Delete</a>
            </td>
        </tr>
    }
</table>